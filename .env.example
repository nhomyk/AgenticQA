# .env.example - OrbitQA Full Stack Configuration

# === GitHub Configuration ===
GITHUB_TOKEN=your_github_token_here
GH_PAT=your_github_personal_access_token_here

# === Server Configuration ===
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# === SaaS Configuration ===
SAAS_PORT=3001
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/orbitqa_saas
JWT_SECRET=your-super-secret-jwt-key-change-in-production
REACT_APP_API_URL=http://localhost:3001

# === Security ===
RATE_LIMIT_WINDOW_MS=15000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_CORS=true
CORS_ORIGIN=*
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# === Logging ===
LOG_LEVEL=info
LOG_FORMAT=json

# === Email Notifications (Optional) ===
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465

# === Scanning Configuration ===
SCAN_TIMEOUT_MS=30000
MAX_RESULTS=25
ENABLE_PERFORMANCE_METRICS=true

# === Puppeteer Configuration ===
PUPPETEER_HEADLESS=true
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false

# === SRE Agent Configuration (Optional) ===
SRE_AGENT_ENABLED=false
SRE_AGENT_INTERVAL_MS=3600000
SRE_AGENT_MAX_ITERATIONS=3

# === Database Configuration ===
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=orbitqa_saas

# === Monitoring ===
PROMETHEUS_URL=http://prometheus:9090
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831

# === Redis (Optional - for job queuing) ===
REDIS_URL=redis://redis:6379

